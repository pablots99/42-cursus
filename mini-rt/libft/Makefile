
NAME = libft.a

SRC = 	./ft_atoi.c			\
		./ft_bzero.c		\
		./ft_calloc.c		\
		./ft_isalnum.c		\
		./ft_isalpha.c		\
		./ft_isascii.c		\
		./ft_isdigit.c		\
		./ft_isprint.c		\
		./ft_itoa.c			\
		./ft_memccpy.c		\
		./ft_memchr.c		\
		./ft_memcmp.c		\
		./ft_memcpy.c		\
		./ft_memmove.c		\
		./ft_memset.c		\
		./ft_putchar_fd.c	\
		./ft_putendl_fd.c	\
		./ft_putnbr_fd.c	\
		./ft_putstr_fd.c	\
		./ft_split.c		\
		./ft_strchr.c		\
		./ft_strdup.c		\
		./ft_strjoin.c		\
		./ft_strlcat.c		\
		./ft_strlcpy.c		\
		./ft_strlen.c		\
		./ft_strmapi.c		\
		./ft_strncmp.c		\
		./ft_strnstr.c		\
		./ft_strrchr.c		\
		./ft_strtrim.c		\
		./ft_substr.c		\
		./ft_tolower.c		\
		./ft_toupper.c		\
		./get_next_line.c   \
		./get_next_line_utils.c \

SRC_BONUS =	ft_lstnew.c	ft_lstadd_front.c ft_lstsize.c ft_lstlast.c 	\
			ft_lstadd_back.c ft_lstdelone.c ft_lstclear.c ft_lstiter.c ft_lstmap.c

OBJS =	$(SRC:.c=.o)

OBJS_BONUS =	$(SRC_BONUS:.c=.o)

CFLAGS = -c -Wall -Wextra -Werror

CC = gcc

all: $(NAME)

$(NAME):
	$(CC) $(CFLAGS) $(SRC)
	ar rc $(NAME) $(OBJS)
	ranlib $(NAME)

bonus:
	make -C ft_printf
	cp ft_printf/libftprintf.a $(NAME)
	$(CC) $(CFLAGS) $(SRC) $(SRC_BONUS)
	ar rc $(NAME) $(OBJS) $(OBJS_BONUS)
	ranlib $(NAME)

clean:
	/bin/rm -f $(OBJS) $(OBJS_BONUS)
	$(MAKE) clean -C ./ft_printf


fclean: clean
	/bin/rm -f $(NAME)
	$(MAKE) fclean -C ./ft_printf


	

re: fclean all



